#include <iostream>
using namespace std;
template <typename T>
void SelectionSort(T arr[],int size){
	for(int i = 0;i < size-1;++i){
		int minindex = i;
		for(int j = i + 1;j < size;++j){
			if(arr[j]<arr[i]){
				minindex = j;
			}
		}
		T temp = arr[i];
		arr[i] = arr[minindex];
		arr[minindex] = temp;

	}
}
template<typename T>
void PrintArray(T arr[],int size){
	for(int i = 0;i<size;++i){
		cout<<arr[i]<<" ";
	}
	cout<<endl;
}
int main() {
	int array1[] = {20, 30, 10, 60, 40};
	cout<<"Unsorted Array: \n";
	PrintArray(array1,5);
	cout<<"Sorted Array: \n";
	SelectionSort(array1,5);
	PrintArray(array1,5);
	return 0;
}
